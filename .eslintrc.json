{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "ignorePatterns": ["*.md","*.json"],
    "extends": ["plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-console": "off",
        "quotes": ["error", "single", { "avoidEscape": true }],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "comma-dangle": ["error", "never"]
    },
    "noInlineConfig": true
}
